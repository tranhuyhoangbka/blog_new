<% if object.errors.any? %>
  <div class="error_explanation">
    <div class="alert alert-danger">
      <p>The form contain <%= pluralize object.errors.count, "error" %></p>
    </div>
    <ul>
      <% object.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
